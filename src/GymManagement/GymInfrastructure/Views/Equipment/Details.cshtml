@model GymDomain.Entities.Equipment

@{
    ViewData["Title"] = "Деталі обладнання";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class="col-sm-2">
            Зал
        </dt>
        <dd class="col-sm-10">
            @(Model.Gym != null ? Model.Gym.Location : "Зал не вказано")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.EquipmentId" class="btn btn-warning">Редагувати</a> |
    <a asp-action="Index" class="btn btn-secondary">Повернутися до списку</a>
</div>
